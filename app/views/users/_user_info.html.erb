<!-- User info部分テンプレート -->

      <table class="table">
        <h2>User info</h2>
          <tr>
            <%= image_tag @user.get_profile_image %>
          </tr>
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
  <div class="row">
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>