<!-- ユーザーの投稿一覧画面 -->
<div class="container px-5 px-sm-0">
 <div class="row">

   <div class="col-md-3">
 	<!-- 部分テンプレートファイルの呼び出し -->
	<%= render 'users/user_info', user: @user %>

	<!-- 部分テンプレートファイルの呼び出し -->
	<%= render 'books/new_book', book: @book %>
   </div>

   <div class="col-md-8 offset-md-1">
  	  <table class="table">
	  	  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
  	    </thead>
  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= image_tag user.get_profile_image %></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", user_path(user.id) %></td>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>
  	  </table>
   </div>
 </div>
</div>